%h4.italic Contact me by <span>completing</span> the form below. I will then get back to you shorlty.

%form{:action => '/send_email', :method => :post}
  %legend Drop a Line
  %p.padded_text_box
    %label{:for => 'name'} <span>Your Name</span><span style='color:red;'>*</red>
    %input{:type => 'textbox', :name => 'name', :id => 'text_box'}
  %p.padded_email_box
    %label{:for => 'email'} <span>Email</span><span style='color:red;'>*</red>
    %input{:type => 'textbox', :name => 'email', :id => 'email_box'}
  %p
    %label{:for => 'description'} <span>Description</span>
    %textarea{:name => 'description', :cols => '40', :rows => '6', :id => 'description'}
  %p.submit
    %input{:type => 'submit', :value => 'Submit'}
    
#msg
  %img{:src => '/images/loading.gif'}

:javascript
  $('.submit').bind('click', function() { $('.submit').hide(); $('#msg').show(); });