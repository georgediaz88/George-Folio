%script{type:'text/javascript', src: '/javascripts/jquery_validate/jquery.validate.js'}

%h4 Drop a line by <span>completing</span> the form below, and I'll get back to you shortly!

%form{action: '/send_email', method: :post, class: 'contact_form'}
  %p
    %label{for: 'name'} <span>Your Name</span><span style='color:red;'>*</span>
    #block_er
      %input{type: 'text', name: 'contact[name]', id: 'text_box'}

  %p
    %label{for: 'email'} <span>Email</span><span style='color:red;'>*</span>
    #block_er
      %input{type: 'email', name: 'contact[email]', id: 'email_box'}

  %p
    %label{for: 'description'} <span>Description</span>
    #block_er
      %textarea{name: 'contact[description]', cols: '40', rows: '6', id: 'description', placeholder: 'Tell me something...'}

  %p.submit
    %input{type: 'submit', class: 'submit bttn', value: 'Send'}

#msg
  %img{src: '/images/loading.gif'}

:javascript
  $(document).ready(function() {
      // $('.contact_form .submit').bind('click', contact_form);
      $(".contact_form").validate({
         rules: {
           "contact[name]": "required",
           "contact[email]": "required"
         },
         messages: {
           "contact[name]": 'Please specify your name',
           "contact[email]": {
             required: "Please specify your email for contact",
             "contact[email]": "Your email address must be in the format of name@domain.com"
           }
         }
      });

  });
